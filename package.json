{
  "name": "stylord",
  "version": "0.0.1",
  "description": "Lightweight javascript styles",
  "main": "dist/stylord.js",
  "scripts": {
    "test": "tape -r babel-register test/**/*.js",
    "test:watch": "tape-watch -r babel-register test/**/*.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "xo lib/**/*.js test/**/*.js",
    "precommit": "npm run lint && npm run test && npm run build",
    "prepush": "npm run precommit",
    "build": "rollup -c",
    "build:watch": "npm run build -- -w",
    "gzip-size": "uglifyjs dist/stylord.js -cm | gzip-size",
    "watch": "run-p -r build:watch test:watch"
  },
  "keywords": [
    "css",
    "inline-styles",
    "css-in-js",
    "framework-agnostic"
  ],
  "author": "Thiago Santos",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "browser-env": "^2.0.25",
    "coveralls": "^2.12.0",
    "gzip-size-cli": "^2.0.0",
    "husky": "^0.13.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2",
    "tape": "^4.6.3",
    "tape-watch": "^2.3.0",
    "uglify-js": "^2.8.13",
    "xo": "^0.18.0"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "space": true,
    "semicolon": false
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "sourceMaps": "inline"
  },
  "dependencies": {
    "kebab-case": "^1.0.0",
    "string-hash": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/stylord.git"
  },
  "bugs": {
    "url": "https://github.com/thiamsantos/stylord/issues"
  },
  "homepage": "https://github.com/thiamsantos/stylord#readme"
}
